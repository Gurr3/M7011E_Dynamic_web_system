<!-- begin ARTISTS -->
<div class="container ">
    <div class="col-md-12">
        <h4>Artists</h4>
        <div class="well">
            <div id="carousel-artists" class="carousel slide" data-interval="false">
                
                <!-- Carousel items -->
                <div class="carousel-inner">
                   		<% var spinner_artist=1 %>
				<% var flag_artist=1 %>
				<% for (var i=0; i<artists.length; i++) { %>
					<% if(spinner_artist == 1) { %>
						<% if (flag_artist == 1) { %>
							<div class="item active">
							<div class="row">
						<% } else { %>
							<div class="item">
							<div class="row">
						<% } %>
		
						<div class="col-sm-3"><a class="soundslike-link-image" href="artist"><img src="<%= artists[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="artist"><h4><%= artists[i].name %></h4></a>
						</div>	

					<% } else if(spinner_artist == 4) { %>
						<% spinner_artist=0 %>
					
						<div class="col-sm-3"><a class="soundslike-link-image" href="artist"><img src="<%= artists[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="artist"><h4><%= artists[i].name %></h4></a>
                            			</div>
	
						</div>
						</div>

					<% } else { %>

						<div class="col-sm-3"><a class="soundslike-link-image" href="artist"><img src="<%= artists[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="artist"><h4><%= artists[i].name %></h4></a>	
						</div>
						
					<% } %>
					<% if(i == (artists.length-1)) { %>
						</div>
						</div>
					<% } %>

					<% spinner_artist=spinner_artist+1 %>
					<% flag_artist=flag_artist+1 %>
				
				<% } %>
                </div>
                <!--/carousel-inner--> <a class="left carousel-control" href="#carousel-artists" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>

                <a class="right carousel-control" href="#carousel-artists" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
            </div>
            <!--/Carousel-->
        </div>
        <!--/well-->
    </div>
</div>
<!-- end ARTISTS -->

<!-- begin ALBUMS -->
<div class="container ">
    <div class="col-md-12">
        <h4>Artists</h4>
        <div class="well">
            <div id="carousel-albums" class="carousel slide" data-interval="false">
                
                <!-- Carousel items -->
                <div class="carousel-inner">
                   		<% var spinner_albums=1 %>
				<% var flag_albums=1 %>
				<% for (var i=0; i<albums.length; i++) { %>
					<% if(spinner_albums == 1) { %>
						<% if (flag_albums == 1) { %>
							<div class="item active">
							<div class="row">
						<% } else { %>
							<div class="item">
							<div class="row">
						<% } %>
		
						<div class="col-sm-3"><a class="soundslike-link-image" href="album"><img src="<%= albums[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="album"><h4><%= albums[i].name %></h4></a>
						<a class="soundslike-link-text" href="artist"><h5><%= albums[i].parent %></h5></a>	
						</div>	

					<% } else if(spinner_albums == 4) { %>
						<% spinner_albums=0 %>
					
						<div class="col-sm-3"><a class="soundslike-link-image" href="album"><img src="<%= albums[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="album"><h4><%= albums[i].name %></h4></a>
						<a class="soundslike-link-text" href="artist"><h5><%= albums[i].parent %></h5></a>
                            			</div>
	
						</div>
						</div>

					<% } else { %>

						<div class="col-sm-3"><a class="soundslike-link-image" href="album"><img src="<%= albums[i].pic %>" alt="Image" class="img-responsive"></a>
						<a class="soundslike-link-text" href="album"><h4><%= albums[i].name %></h4></a>	
						<a class="soundslike-link-text" href="artist"><h5><%= albums[i].parent %></h5></a>
						</div>
						
					<% } %>
					<% if(i == (albums.length-1)) { %>
						</div>
						</div>
					<% } %>

					<% spinner_albums=spinner_albums+1 %>
					<% flag_albums=flag_albums+1 %>
				
				<% } %>
                </div>
                <!--/carousel-inner--> <a class="left carousel-control" href="#carousel-albums" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>

                <a class="right carousel-control" href="#carousel-albums" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
            </div>
            <!--/Carousel-->
        </div>
        <!--/well-->
    </div>
</div>
<!-- end ALBUMS -->


